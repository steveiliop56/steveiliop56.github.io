---
import { Icon } from "astro-icon/components";
---

<script>
  document.addEventListener("astro:page-load", () => {
    const themeToggle = document.getElementById("themeToggle");

    const handleToggleClick = () => {
      const element = document.documentElement;

      element.classList.toggle("dark");

      const isDark = element.classList.contains("dark");
      element.style.colorScheme = isDark ? "dark" : "light";
      localStorage.setItem("theme", isDark ? "dark" : "light");
    };

    themeToggle?.addEventListener("click", handleToggleClick);
  });
</script>

<button
  class="align-middle hover:cursor-pointer transition duration-200 ease-in-out"
  id="themeToggle"
  aria-label="Toggle theme"
>
  <Icon
    class="hidden dark:block w-6 h-6 m-auto hover:opacity-80"
    name="tabler:sun"
  />
  <Icon
    class="dark:hidden w-6 h-6 m-auto hover:opacity-80"
    name="tabler:moon"
  />
</button>
