---
const { post } = Astro.props;

const words = post.body.split(" ").length;
const readTime = Math.round(words / 200);
---

<a href={`/posts/${post.slug}`}>
  <div
    class="hover:opacity-80 border border-neutral-200 dark:border-neutral-800 rounded-md p-4 max-w-full break-words drop-shadow-sm"
  >
    <p class="font-semibold text-lg">
      {post.data.title}
    </p>
    <p class="text-sm text-neutral-700 dark:text-neutral-300 mt-1">
      {post.data.description}
    </p>
    <p class="text-xs text-neutral-600 dark:text-neutral-400 mt-2">
      {new Date(Date.parse(post.data.publishedOn)).toDateString()} &bull;
      {readTime} min read &bull; {post.data.author}
    </p>
  </div>
</a>
