---
const { post } = Astro.props;

const words = post.body.split(" ").length;
const readTime = Math.round(words / 200);
---

<a href={`/posts/${post.slug}`}>
  <div
    class="flex flex-col bg-neutral-50 dark:bg-neutral-950 border-[0.5px] border-neutral-200 dark:border-neutral-800 hover:text-neutral-700 dark:hover:text-neutral-200 transition-colors rounded-md p-4 gap-1 max-w-full break-words drop-shadow-sm"
  >
    <p class="font-bold text-lg">
      {post.data.title}
    </p>
    <p>
      {post.data.description}
    </p>
    <p>
      {new Date(Date.parse(post.data.publishedOn)).toDateString()} &bull;
      {readTime} min read &bull; {post.data.author}
    </p>
  </div>
</a>
