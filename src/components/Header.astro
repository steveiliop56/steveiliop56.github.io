---
import HeaderLink from "./HeaderLink.astro";
import { Icon } from "astro-icon/components";
import ThemeSwitch from "./ThemeSwitch.astro";

const navItems = [
  { link: "/", title: "Home" },
  { link: "/posts", title: "Posts" },
  { link: "/about", title: "About" },
  { link: "/projects", title: "Projects" },
];
---

<script>
  document.addEventListener("astro:page-load", () => {
    const openMenu = () => {
      const menu = document.getElementById("menu");
      const body = document.body;
      menu?.classList.remove("hidden");
      menu?.classList.add("flex");
      body?.classList.add("overflow-hidden");
    };
    const closeMenu = () => {
      const menu = document.getElementById("menu");
      const body = document.body;
      menu?.classList.remove("flex");
      menu?.classList.add("hidden");
      body?.classList.remove("overflow-hidden");
    };
    const menuOpen = document.getElementById("menu-open");
    const menuClose = document.getElementById("menu-close");
    menuOpen?.addEventListener("click", openMenu);
    menuClose?.addEventListener("click", closeMenu);
  });
</script>

<header class="min-w-full bg-transparent p-4 flex justify-between">
  <div class="flex flex-row gap-2">
    <a href="/">
      <p class="text-2xl font-bold w-min">Doesmycode.work</p>
    </a>
    <ThemeSwitch />
  </div>
  <div class="flex-row gap-4 hidden md:flex">
    {navItems.map((item) => <HeaderLink link={item.link} title={item.title} />)}
  </div>
  <Icon
    id="menu-open"
    class="w-8 h-8 md:hidden"
    name="tabler:menu-2"
    aria-label="Open menu"
  />
  <div
    id="menu"
    class="fixed top-0 left-0 min-h-screen w-screen z-50 inset-0 bg-stone-100 dark:bg-stone-950 flex-col gap-4 items-center justify-center hidden md:hidden"
  >
    <Icon
      id="menu-close"
      class="absolute top-5 right-5 w-8 h-8"
      name="tabler:x"
      aria-label="Close menu"
    />
    {navItems.map((item) => <HeaderLink link={item.link} title={item.title} />)}
  </div>
</header>
