<script>
  // Credits to: https://github.com/giscus/giscus/issues/336#issuecomment-1214366281
  document.addEventListener("astro:page-load", () => {
    function getGiscusTheme() {
      return document.documentElement.classList.contains("dark")
        ? "noborder_dark"
        : "noborder_light";
    }

    function sendGiscusMessage<T>(message: T) {
      const iframe = document.querySelector<HTMLIFrameElement>(
        "iframe.giscus-frame",
      );
      if (!iframe) return;
      if (!iframe.contentWindow) return;
      iframe.contentWindow.postMessage(
        { giscus: message },
        "https://giscus.app",
      );
    }

    function setGiscusTheme() {
      sendGiscusMessage({
        setConfig: {
          theme: getGiscusTheme(),
        },
      });
    }

    if (document.getElementsByClassName("giscus").length === 0) return;

    const giscusAttributes = {
      src: "https://giscus.app/client.js",
      "data-repo": "steveiliop56/steveiliop56.github.io",
      "data-repo-id": "R_kgDOMiZ-xg",
      "data-category": "Comments",
      "data-category-id": "DIC_kwDOMiZ-xs4Chz16",
      "data-mapping": "pathname",
      "data-strict": "0",
      "data-reactions-enabled": "1",
      "data-emit-metadata": "0",
      "data-input-position": "bottom",
      "data-theme": getGiscusTheme(),
      "data-lang": "en",
      "data-loading": "lazy",
      crossorigin: "anonymous",
      async: "",
    };

    const giscusScript = document.createElement("script");
    Object.entries(giscusAttributes).forEach(([key, value]) =>
      giscusScript.setAttribute(key, value),
    );
    document.body.appendChild(giscusScript);

    const toggle = document.getElementById("themeToggle");
    toggle?.addEventListener("click", setGiscusTheme);
  });
</script>

<div class="giscus"></div>
