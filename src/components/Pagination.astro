---
import { Icon } from "astro-icon/components";
import clsx from "clsx";

const { page } = Astro.props;
---

<div
  class={clsx(
    "flex flex-row",
    page.url.prev ? "justify-between" : "justify-end",
    "min-w-full",
  )}
>
  {
    page.url.prev && (
      <a href={page.url.prev}>
        <div class="flex flex-row gap-2 rounded-full bg-zinc-200 dark:bg-zinc-800 py-3 px-4 justify-center items-center hover:opacity-80">
          <Icon name="tabler:arrow-left" class="w-4 h-4 text-lg font-medium" />
          <p class="text-md font-medium">Previous</p>
        </div>
      </a>
    )
  }
  {
    page.url.next && (
      <a href={page.url.next}>
        <div class="flex flex-row gap-2 rounded-full bg-zinc-200 dark:bg-zinc-800 py-3 px-4 justify-center items-center hover:opacity-80">
          <p class="text-md font-medium">Next</p>
          <Icon name="tabler:arrow-right" class="w-4 h-4 text-lg font-medium" />
        </div>
      </a>
    )
  }
</div>
